<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>europeana-uim</artifactId>
    <groupId>eu.europeana</groupId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Unified Ingestion Manager</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.core.version>3.0.3.RELEASE</spring.core.version>
        <osgi.version>1.4.0</osgi.version>
        <karaf.version>2.1.0</karaf.version>
    </properties>

    <modules>
        <!--  a version independent common module -->
        <module>common</module>

        <!--  the uim api module -->
        <module>api</module>

        <!--  the uim standard implementation module -->
        <module>plugins/basic</module>

        <!--  the uim standard file import module -->
        <module>plugins/fileimp</module>

        <!--  the uim standard in memory storage implementation -->
        <module>storage/memory</module>

        <!-- a dummy plugin for testing -->
        <module>plugins/dummy</module>

        <!-- a dummy workflow for testing -->
        <module>workflows/dummy</module>

        <!--  the uim integration test module -->
        <module>plugins/integration</module>

        <!-- webconsole-based GUI -->
        <module>gui/uim-webconsole-extension</module>

    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <target>1.6</target>
                    <source>1.6</source>
                </configuration>
            </plugin>

            <!-- generate dependencies versions -->
            <!-- this is required for the integration tests to work without explicitely specifying versions -->
            <!-- see http://wiki.ops4j.org/display/paxexam/Pax+Exam+-+Tutorial+1 -->
            <plugin>
                <groupId>org.apache.servicemix.tooling</groupId>
                <artifactId>depends-maven-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>generate-depends-file</id>
                        <goals>
                            <goal>generate-depends-file</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

