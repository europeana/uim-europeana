<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .splitpanel {
        	min-height: 400px;
        	width: 100%;
        	min-width: 500px;
        	border: 4px solid #d0e4f6;
        }
        
        .cellTable {
        	border-bottom: 1px solid #ccc;
        	text-align: left;
        	margin-bottom: 4px;
        	min-width: 500px;
        	min-height: 400px;
        }
        
        .linkCellTable {
        	border-bottom: 1px solid #ccc;
        	text-align: left;
        	margin-bottom: 4px;
        	width: 100%;
        	min-width: 200;
        }
        
        .label {
        	width: 100px;
        	font-weight: bold;
        	margin-right: 4px;
        }
        
        .value {
        	width: 200px;
        	margin-right: 4px;
        }
        
        .leftPanel {
        	background-color: #FFF;
        	width: 780px;
        	height: 100%;
        }
        
        .rightPanel {
        	background-color: #FFF;
        }
    </ui:style>

    <g:HTMLPanel>
        <table cellspacing='0' cellpadding='0' style='width:100%;'>
            <tr>
                <td valign='top'>
                    <g:HorizontalPanel>
                        <g:ListBox ui:field='providerBox' addStyleNames='{style.value}' />
                        <g:ListBox ui:field='collectionBox' addStyleNames='{style.value}' />
                        <g:TextBox ui:field='queryBox' addStyleNames='{style.value}' />
                        <g:Button ui:field='searchButton' />
                    </g:HorizontalPanel>
                </td>
            </tr>
            <tr>
                <td valign='top'>
                    <c:CellTable addStyleNames='{style.cellTable}' ui:field='cellTable' />
                </td>
            </tr>
            <tr>
                <td align='center'>
                    <c:SimplePager ui:field='pager' />
                </td>
            </tr>
            <tr>
                <td align="center">
                    <g:SplitLayoutPanel addStyleNames='{style.splitpanel}'>
                        <g:west size='800'>
                            <!-- <g:ScrollPanel addStyleNames='{style.leftPanel}'> -->
                            <g:Frame ui:field='leftFrame' addStyleNames='{style.leftPanel}' />
                            <!-- </g:ScrollPanel> -->
                        </g:west>
                        <g:center>
                            <g:ScrollPanel width='100%'>
                                <c:CellTable addStyleNames='{style.linkCellTable}' ui:field='linkCellTable' />
                            </g:ScrollPanel>
                        </g:center>
                    </g:SplitLayoutPanel>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>